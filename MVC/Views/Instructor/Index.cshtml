@model List<Instructor>
<h1 class="mb-5">Instructors</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Image</th>
            <th scope="col">Salary</th>
            <th scope="col">Address</th>
            <th scope="col">Department</th>
            <th scope="col">Course</th>
            <th scope="col">Details</th>

        </tr>
    </thead>
    <tbody>
        @foreach (Instructor inst in Model)
        {
            <tr class="text-center">
                <th scope="row">@inst.InsName</th>
                <th> <img src="/imgs/@(inst.Image)" class="w-25 m-auto h-25" /></th>
                <th scope="row">@inst.Salary</th>
                <th scope="row">@inst.Address</th>
                <th scope="row">@inst.Department?.DeptName</th>
                <th scope="row">@inst.Course?.CrsName</th>
                <th>
                    <a href="/Instructor/Detail/@inst.Id" class="btn btn-primary">Details</a>
                </th>
            </tr>
        }
    </tbody>
</table>